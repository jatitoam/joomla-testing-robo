{
  "name"           : "joomla-projects/joomla-testing-robo",
  "description"    : "Joomla automated testing swiss knife",
  "keywords"       : ["robo", "task", "qa", "tests"],
  "license"        : "GPL-2.0+",
  "authors"        : [
    {
      "name"       : "Tito Alvarez",
      "email"      : "tito.alvarez@community.joomla.org"
    }
  ],
  "autoload": {
    "psr-4": {
      "Joomla\\Testing\\Robo\\" : "src/"
    }
  },
  "require": {
    "php"                             : ">=5.5.0",
    "consolidation/robo"              : "~1",
    "squizlabs/php_codesniffer"       : "~2",
    "cloudinary/cloudinary_php"       : "~1",
    "knplabs/github-api"              : "~2",
    "guzzlehttp/guzzle"               : "~6",
    "php-http/guzzle6-adapter"        : "~1",
    "symfony/console"                 : "~3|~4",
    "symfony/filesystem"              : "~3|~4",
    "symfony/finder"                  : "~3|~4",
    "symfony/process"                 : "~3|~4",
    "symfony/yaml"                    : "~3|~4"
  },
  "replace": {
    "joomla-projects/robo"            : "< 1.0"
  },
  "minimum-stability"                 : "dev",
  "prefer-stable"                     : true
}
